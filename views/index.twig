<html>
<head>
    <title>Home page</title>
    <link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
    <h1>Todo tasks</h1>
    <a href="/logout">Logout</a>
    <form method="post" enctype="multipart/form-data">
        <label>
            Title <input type="text" name="title" />
        </label>a
        <label>
            Body <input type="text" name="body" />
        </label>
        <label>
            Status
            <select name="status">
                <option>Open</option>
                <option>In Progress</option>
                <option>Delete</option>
            </select>
        </label>
        <label>
            Due date <input type="text" name="dueDate" />
        </label>
        <label>
            Image <input type="file" name="image">
        </label>
        <input type="submit"/>
    </form>
    <table>
        <tr>
            <th>Task title</th>
            <th>Task</th>
            <th>Status</th>
            <th>Due date</th>
            <th colspan="3">Change status</th>
            <th>Delete</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.body }}
                   
                </td>
                <td>{{ task.status }}</td>
                <td>{{ task.dueDate }}</td>
                <td><a href="setStatus/{{task._id}}/Open">Open</a></td>
                <td><a href="setStatus/{{task._id}}/In Progress">In Progress</a></td>
                <td><a href="setStatus/{{task._id}}/Closed">Closed</a></td>
                <td><a href="delete/{{task._id}}">Delete</a></td>
                <td> <img src="taskImages/{{task._id}}.png" style="width:400px" /></td>
            </tr>
        {% endfor %}
    </table>
</body>
</html>