<html>
<head>
    <title>Home page</title>
</head>
<body>
    <h1>Todo tasks</h1>
    <form method="post">
        <label>
            Title <input type="text" name="title" />
        </label>
        <label>
            Body <input type="text" name="body" />
        </label>
        <input type="submit"/>
    </form>
    <table>
        <tr>
            <th>Task title</th>
            <th>Task</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.body }}</td>
            </tr>
        {% endfor %}
    </table>
</body>
</html>